<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/ticket/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control"
                                placeholder="Description"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label for="inpuFechaInicio" class="form-label">Fecha de Inicio Ticket</label>
                            <input type="date" name="FechaInicio" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label for="inpuFechaFinal" class="form-label">Fecha de fin Ticket</label>
                            <input type="date" name="FechaFinal" class="form-control">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>